<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlRidesC"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ListBackColor"
    android:orientation="vertical">

    <TextView
        android:id="@+id/CreateNewRideText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="@dimen/myRidesTextPadding"
        android:text="Create a new ride"
        android:textSize="@dimen/myRidesTextSize"
        />
    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/CreateNewRideText">

        <EditText
            android:id="@+id/etNewFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_shape"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:hint="@string/fromHintText"/>
        <EditText
            android:id="@+id/etNewTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etNewFrom"
            android:background="@drawable/edittext_shape"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:hint="@string/toHintText"/>

        <EditText
            android:id="@+id/etNewPassengers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etNewTo"
            android:background="@drawable/edittext_shape"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:inputType="number"
            android:hint="@string/passengersHintText"/>

        <EditText
            android:id="@+id/etNewDate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/etNewPassengers"
            android:layout_alignParentStart="true"
            android:background="@drawable/edittext_shape"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:hint="@string/dateHintText"
            android:focusable="false"
            />
        <EditText
            android:id="@+id/etNewTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_shape"
            android:layout_toEndOf="@id/etNewDate"
            android:layout_below="@id/etNewPassengers"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:inputType="time"
            android:hint="@string/timeHintText"/>

        <Button
            android:id="@+id/btCreateNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etNewTime"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/colorAccent"
            android:text="@string/btCreateText"
            android:textColor="@color/colorWhite"/>
    </RelativeLayout>

</RelativeLayout>